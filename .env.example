# Database Configuration (for local development)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=user
DATABASE_PASSWORD=password
DATABASE_NAME=warung_telegram

# Or use single DATABASE_URL for production (recommended)
# DATABASE_URL=postgresql://user:password@localhost:5432/warung_telegram

# Application Configuration
NODE_ENV=development
PORT=3000

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Cloudflare R2 Configuration
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=warung-telegram
CLOUDFLARE_R2_PUBLIC_URL=https://your-custom-domain.com
# Or use the default R2 URL: https://pub-your-bucket-id.r2.dev
